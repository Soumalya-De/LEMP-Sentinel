# Database Configuration
DB_HOST=mysql
DB_NAME=my_database
DB_USER=my_app_user
DB_PASSWORD=SECURE_PASSWORD_HERE
# MySQL Root Password
MYSQL_ROOT_PASSWORD=SECURE_ROOT_PASSWORD_HERE
# Application Config
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080

# Container user (non-root for PHP)
APP_USER_ID=1000
APP_GROUP_ID=1000

# Monitoring Configuration
UPTIME_KUMA_PORT=3001
UPTIME_KUMA_ADMIN_EMAIL=admin@example.com
UPTIME_KUMA_ADMIN_PASSWORD=SECURE_KUMA_PASSWORD_HERE

# Alert Configuration
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE
TELEGRAM_CHAT_ID=YOUR_TELEGRAM_CHAT_ID_HERE

# Image pinning (optional): set to image@sha256:... to pin exact digest
NGINX_BASE_IMAGE=nginx:alpine
PHP_BASE_IMAGE=php:8.2-fpm-alpine